<form action="/todos" method="POST">
  <div class="container m-5">
    <div class="mb-3">
      <label for="name"
             class="form-label">餐廳名字</label>
      <input type="text"
             class="form-control"
             id="name"
             name="name"
             placeholder="餐廳名字">
    </div>
    <div class="mb-3">
      <label for="category"
             class="form-label">餐廳類別</label>
      <input type="text"
             class="form-control"
             id="category"
             name="category"
             placeholder="餐廳類別">
    </div>
    <div class="mb-3">
      <label for="rating"
             class="form-label">評價</label>
      <input type="text"
             class="form-control"
             id="rating"
             name="rating"
             placeholder="評價">
    </div>
    <div class="mb-3">
      <label for="image"
             class="form-label">照片網址</label>
      <input type="text"
             class="form-control"
             id="image"
             name="image"
             placeholder="照片網址">
    </div>
    <div class="mb-3">
      <label for="location"
             class="form-label">餐廳位置</label>
      <input type="text"
             class="form-control"
             id="location"
             name="location"
             placeholder="餐廳位置">
    </div>
    <div class="mb-3">
      <label for="description"
             class="form-label">敘述</label>
      <input type="text"
             class="form-control"
             id="description"
             name="description"
             placeholder="敘述">
    </div>
    <button type="submit">新增</button>
  </div>
  
</form>
